extends layout

block content
 .col-md-4.col-md-offset-4
   h2 Sign in to Blog App
   div
      p #{message}
   div
     form(action="/login", method="POST")
      p
         input.form-control(name="email", type="text", placeholder="Email")
      p
         input.form-control(name="password", type="password", placeholder="Paswword")
      p
         button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in
         a(href="/register") Create an Account