extends layout

block content
  .container
    h1 Sign in to Blog App
    p #{message}
    form(role='form', action='/login', method='POST', style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name='email', placeholder='Email')
      .form-group
          input.form-control(type='password', name='password', placeholder='Password')
      button.btn.btn-primary(type='submit') Submit
      &nbsp;
      a(href='/register')
        button.btn.btn-primary(type='button') Create an Account